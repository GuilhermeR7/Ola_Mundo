doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Exemplo de Pug com Navbar e Carrossel
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
  body
    header
      nav.navbar.navbar-expand-lg.navbar-light.bg-light
        .container
          a.navbar-brand(href="#") Navbar
          button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
            span.navbar-toggler-icon
          .collapse.navbar-collapse#navbarNav
            ul.navbar-nav.ml-auto
              li.nav-item
                a.nav-link(href="#") Início
              li.nav-item
                a.nav-link(href="/jogos/minecraft") Minecraft
              li.nav-item
                a.nav-link(href="/jogos/roblox") Roblox
              li.nav-item
                a.nav-link(href="/jogos/fortnite") Fortnite
            li.nav-item
                a.nav-link(href="/jogos/pillarchase") Pillar Chase
    .container.mt-4
      .row
        .col-md-8
          .carousel.slide(data-ride="carousel", id="carouselExampleSlidesOnly")
            .carousel-inner
              .carousel-item.active
                img.d-block.w-100(src="https://assets.nintendo.com/image/upload/c_fill,w_1200/q_auto:best/f_auto/dpr_2.0/ncom/software/switch/70010000069430/20a06bf1886558538728f46bf4b3bae2875e7d371d3b0d2b3bbf6ea2302f7668", alt="First slide")
              .carousel-item
                img.d-block.w-100(src="https://www.adrenaline.com.br/wp-content/uploads/2024/05/sonic-rumble-1.jpg", alt="Second slide")
              .carousel-item
                img.d-block.w-100(src="https://store-images.s-microsoft.com/image/apps.48741.13860801260224510.92528e3a-2dc0-4441-9ed4-7aea23b62576.86ec5446-561c-4f5d-9333-6bd2e8d664ec?q=90&w=480&h=270", alt="Third slide")
            a.carousel-control-prev(href="#carouselExampleSlidesOnly", role="button", data-slide="prev")
              span.carousel-control-prev-icon(aria-hidden="true")
              span.sr-only Previous
            a.carousel-control-next(href="#carouselExampleSlidesOnly", role="button", data-slide="next")
              span.carousel-control-next-icon(aria-hidden="true")
              span.sr-only Next

    footer.footer.bg-light.py-3
      .container
