doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Exemplo de Pug com Navbar e Carrossel
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
  body
    header
      nav.navbar.navbar-expand-lg.navbar-light.bg-light
        .container
          a.navbar-brand(href="#") Navbar
          button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
            span.navbar-toggler-icon
          .collapse.navbar-collapse#navbarNav
            ul.navbar-nav.ml-auto
              li.nav-item
                a.nav-link(href="/index") Início
              li.nav-item
                a.nav-link(href="/jogos/minecraft") Minecraft
              li.nav-item
                a.nav-link(href="/jogos/roblox") Roblox
              li.nav-item
                a.nav-link(href="/jogos/sonic") Sonic
              li.nav-item
                a.nav-link(href="/jogos/fortnite") Fortnite
            li.nav-item
                a.nav-link(href="/jogos/pillarchase") Pillar Chase

    .container.mt-4
      .row
        .col-md-8
          .carousel.slide(data-ride="carousel", id="carouselExampleSlidesOnly")
            .carousel-inner
              .carousel-item.active
                img.d-block.w-100(src="https://media.gq-magazine.co.uk/photos/645b5c3c8223a5c3801b8b26/16:9/w_2560%2Cc_limit/100-best-games-hp-b.jpg", alt="First slide")
              .carousel-item
                img.d-block.w-100(src="https://t2.tudocdn.net/605731?w=1200&h=1200")
              .carousel-item
                img.d-block.w-100(src="https://gogamers.gg/wp-content/uploads/2023/09/Thumb-SiteNovo-Industria-de-jogos-optimized.png")
            a.carousel-control-prev(href="#carouselExampleSlidesOnly", role="button", data-slide="prev")
              span.carousel-control-prev-icon(aria-hidden="true")
              span.sr-only Previous
            a.carousel-control-next(href="#carouselExampleSlidesOnly", role="button", data-slide="next")
              span.carousel-control-next-icon(aria-hidden="true")
              span.sr-only Next

    footer.footer.bg-light.py-3
      .container
        p.text-center © 2024 Todos os direitos reservados.

